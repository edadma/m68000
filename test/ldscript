MEMORY
{
    rom : ORIGIN = 0x00000, LENGTH = 0x1000
    ram : ORIGIN = 0x10000, LENGTH = 0x1000
}

SECTIONS
{
    .text : { *(.text*) } > rom

    __data_rom_start__ = .;
    .data : {
        __data_start__ = .;
        *(.data*)
    } > ram AT > rom
    __data_end__ = .;
    __data_size__ = __data_end__ - __data_start__;

    .bss  : {
        __bss_start__ = .;
        *(.bss*)
    } > ram
    __bss_end__ = .;
    __bss_size__ = __bss_end__ - __bss_start__;
}